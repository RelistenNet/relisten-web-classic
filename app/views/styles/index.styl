.index-page
  padding-bottom 100px
  text-align center

  table
    text-align left
    width 70%
    max-width 800px
    margin 0 auto
    font-size 1.4em

    tr
      line-height 1.4em

      th
        font-weight normal

        &.heading
          font-weight bold

      td
        width 50px
        text-align right

  .enable-notifications
    width 250px
    height 60px
    border 1px solid #333
    background transparent
    margin 40px 0 0 0
    font-size 1.4em
    font-family "HelveticaNeue-CondensedBold",Helvetica,Arial,sans-serif

    &:hover
      background #333
      color #fff

    &:focus
      outline none