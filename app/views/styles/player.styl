.player-container
  height 100%
  width 50%
  border-bottom 1px solid #AAA
  position absolute
  right 0
  top 0

  .last, .pause, .play, .next
    width 14px
    position relative
    z-index 99

  .info
    top 0
    right 0
    position absolute
    text-align right
    width 100%
    height 100%

    h3.title, h4.album
      line-height .5em
      padding-right 10px
      color #333

    .time
      padding-right 10px
      div
        display inline-block

    .progress-bar
      height 5px
      width 1%
      background black
      position absolute
      bottom 0
      left 0

    .position-bar
      width 2px
      height 7px
      background #FFF
      position absolute
      left 0%
      bottom 0
