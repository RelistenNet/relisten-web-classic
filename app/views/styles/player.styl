.player-container
  position fixed
  height 80px
  width 100%
  bottom 0
  left 0

  .info
    position absolute
    top 0
    left 20px

    h3.title
      line-height .5em
      color #333

    h4.album
      line-height .5em
      color #333

    .last, .pause, .play, .next
      width 14px

    .progress-bar
      height 5px
      width 1%
      background black
      position fixed
      bottom 0
      left 0

    .position-bar
      width 2px
      height 7px
      background #FFF
      position fixed
      left 0%
      bottom 0

    .time

      div
        display inline-block