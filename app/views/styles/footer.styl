@import 'nib'

wavesblue = #01688A

footer
  height 150px
  width 100%
  position absolute
  bottom -150px
  border-top 1px solid #AAA
  background #F6F6F6
  z-index 99
  -webkit-box-shadow 0px -3px 2px -2px rgba(61, 61, 61, 0.4)
  box-shadow 0px -3px 2px -2px rgba(61, 61, 61, 0.4)


  .progress-container
    background #999
    width 100%
    position absolute
    height 5px
    z-index 100
    top 0
    left 0

    .progress-bar
      height 5px
      width 1%
      background black
      position absolute
      top 0

    .position-bar
      width 2px
      height 7px
      background #FFF
      position absolute
      z-index 101
      top 0
