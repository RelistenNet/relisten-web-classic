@import 'nib'

wavesblue = #01688A

footer
  height 100px
  min-width 940px
  width 100%
  position absolute
  bottom -150px
  //border-top 1px solid #AAA
  background #F6F6F6
  z-index 99
  overflow hidden
  //-webkit-box-shadow 0px -3px 2px -2px rgba(61, 61, 61, 0.8)
  //box-shadow 0px -3px 2px -2px rgba(61, 61, 61, 0.8)

  .progress-container
    background #666
    width 100%
    position absolute
    height 8px
    z-index 100
    top 0
    left 0
    cursor pointer

    .progress-bar
      height 8px
      width 1%
      background #000
      position absolute
      top 0

    .position-bar
      width 3px
      height 7px
      background #EEE
      position absolute
      z-index 101
      top 0
