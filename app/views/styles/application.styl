// Apply a natural box layout model to all elements.
// http://paulirish.com/2012/box-sizing-border-box-ftw/
*
  box-sizing: border-box

html
  height 100%
  min-width 940px
  width 100%
  overflow-y hidden

body
  background backgroundColor //004756
  color #333333
  font-family Helvetica, Arial, sans-serif
  height 100%
  width 100%
  overflow-y hidden

  .container-fluid
    height 100%
    width 100%
    padding 0

    #page-container
      display none
      height 100%
      overflow-y scroll
      //padding-bottom 200px

  ul#notifications
    position fixed
    top 50px
    right 0
    padding 20px
    z-index 99

    li
      background #FFF
      list-style-type none
      color #333
      width 300px
      border-radius(5px)
      border 3px solid #EEE
      margin 10px

      div
        position relative
        padding 0 10px

        img
          position absolute
          top 0
          right 0
          max-height 40px
          max-width 40px
          opacity .7

        a
          position absolute
          top 0
          left 0

        h3
          line-height 1em

.clear
  clear both