@import 'nib'
@import './variables'

asihtosblue = #008ab0

.home-page
  color #333
  height 100%

  .row-fluid
    width 100%
    height 100%

    .span4
      height 100%
      max-width 33%
      position relative
      overflow-y auto
      overflow-x hidden

      div.ul-header
        position absolute
        color #333
        z-index 97
        font-size 1.33em
        //text-transform: uppercase
        text-shadow 0 1px 0 #fff
        font-weight 600
        text-align center
        line-height 1em
        padding 1em 0 1em 0
        width 99%
        border 1px solid #BBB
        border-top 0
        background-color backgroundColor
        text-overflow ellipsis
        white-space nowrap
        overflow hidden
        //-webkit-box-shadow 0px 4px 3px -2px rgba(61, 61, 61, 0.4)
        //box-shadow 0px 4px 3px -2px rgba(61, 61, 61, 0.4)

      ul
        overflow-x hidden
        background-color backgroundColor
        margin 0 2% 0 2%
        top 53px
        bottom 50px
        width 95%
        position absolute
        border-left 1px solid #BBB
        border-right 1px solid #BBB
        border-bottom 1px solid #BBB

        li
          list-style none
          border-bottom 1px solid #CCC
          cursor pointer
          font-size .9em
          position relative
          //-webkit-box-shadow 0px 0px 2px 2px rgba(61, 61, 61, 0.1)
          //box-shadow 0px 0px 2px 2px rgba(61, 61, 61, 0.1)

          &.footnotes p
            padding 10px 0 0 5px

          .play
            position absolute
            right 20px
            top 7px
            font-size 1.5em
            opacity .4
            display none

            &:hover
              opacity 1

          .add
            position absolute
            right 15px
            top 4px
            font-size 2em
            opacity .4

            &:hover
              opacity 1

          > a
            color asihtosblue
            height 100%
            width auto
            padding 5px 0px 5px 5px
            //line-height 38px
            text-decoration none
            display block
            text-overflow ellipsis
            white-space nowrap
            overflow hidden
            font-size 14px
            font-family 'Open Sans'

            &:hover
              background #EEEEEE


            &.blue
              color asihtosblue

            &.active
              background asihtosblue
              color #fff
              //position relative
              //z-index 3
              //-webkit-box-shadow 0px 4px 3px -2px rgba(0, 0, 0, 0.3), 0px -4px 3px -2px rgba(0, 0, 0, 0.3)
              //box-shadow 0px 4px 3px -2px rgba(0, 0, 0, 0.3), 0px -4px 3px -2px rgba(0, 0, 0, 0.3)

              span.time
                color #eee

            &.clear
              padding: 0
              width: auto
              height: auto
              display: inline-block

            &.video-link
              font-size 1.14em

            &.archive, &.add-all
              color #333

            span.date
              font-size 1.3em
              color asihtosblue

            span.venue
              color #555
              font-size 0.75em
              margin-top 5px
              pointer-events none

            span.time
              color #555
              font-size 0.75em
              margin-top 5px
              text-align right
              pointer-events none

            //span.date
          .report
            color #555
            font-size 0.91em
            position absolute
            z-index 2
            right 4px
            bottom 10px
            opacity .7

            &:hover
              opacity 1

          .report-actions
            padding 5px
            text-align center
            display none

            > a
              margin 5px

          form
            margin 0

            input
              margin 5px
              width 93%
              background transparent
              border 1px solid rgba(0, 0, 0, .3)

          .error
            font-size 3em
            ne-height 1em
            padding 10px
            color #D90F0F

      &.shows-container

        a
          color #333

          &.active
            span
              color #fff


      &.songs-container

        li

          &.current-source
            padding 5px 2px

          &.source, &.current-source
            cursor auto
            font-family "Helvetica Neue", Helvetica, Arial, sans-serif

            h5
              margin 1px auto
              width 97%

            > a
              white-space normal
              color #333
              font-size 1em
              font-family "Helvetica Neue", Helvetica, Arial, sans-serif

            p
              font-size 1em
              margin 1px auto
              width 97%

              .field
                font-weight bold

          &.select-source.multiple-sources
            padding 5px
            font-weight bold

            &:hover
              background #E6E6E6
              cursor pointer

            .total-sources
              position absolute
              right 5px
              font-family 'Open Sans'
              font-size .9em

          &.source
            display none

            p
              font-size 1em
