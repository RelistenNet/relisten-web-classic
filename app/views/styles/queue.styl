.queue-container
  height 100%
  width 40%
  position absolute
  bottom 0
  left 0

  ul
    padding 8px 0 0 0
    margin 0 5px
    overflow-y scroll
    height 100%
    width 100%
    li
      list-style-type none

      a
        &.active
          font-weight bold

      span
        font-size .8em


        a
          color #333

  button
    position absolute
    right 20px
    height 30px
    width 100px
    display none

    &.save
      bottom 10px
    &.clear
      bottom 50px

  &:hover
    button
      display block