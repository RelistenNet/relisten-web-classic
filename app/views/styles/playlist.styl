.playlist-page
  padding-bottom 150px
  overflow-y auto
  overflow-x hidden

  .name-container
    margin auto
    width 400px
    padding 5px 5px 30px 5px

  table
    width 100%
    margin auto

    tbody
      width 100%

      tr
        width 100%
        height 90px
        border-bottom 1px solid #CCC

        td
          width 50%

          p
            width 80%
            text-align left
