.g5position {
    font-family: Arial, Helvetica, Geneva, sans-serif;
    font-size: 9px;
    color:#888;
    text-align:center;
    width:115px;
    padding:2px;
}

.g5inside {
    font-family: Arial, Helvetica, Geneva, sans-serif;
    font-size: 9px;
    background-color: #EEE;
    border:1px;
    border-color:gray;
    border-style:solid;
    width:225px;
    height:65px;
    padding:3px;
    overflow: hidden;
}

.g5transport {
    height: 12px;
    overflow: hidden;
}

input[type='range'].transportbar, input[type='range'].volume {
    outline: none;
    vertical-align:middle;
    -webkit-appearance: none !important;
    -moz-appearance: none !important;
    -ms-appearance: none !important;
    -o-appearance: none !important;
    appearance: none !important;
}

input[type='range'].transportbar::-webkit-slider-thumb, input[type='range'].volume::-webkit-slider-thumb {
    vertical-align:middle;
    -webkit-appearance: none !important;
}

input[type='range'].transportbar {
    margin-top: -17px;
    margin-left: 2px;
    padding: 0;
    height:4px;
    width:100%;
    background: transparent;
}

.g5meter {
    margin: 3px 2px 2px 2px;
    padding: 0;
    height: 4px;
    width:100%;
    background-image: -webkit-linear-gradient(#DDD, #AAA);
    background-image: -moz-linear-gradient(#DDD, #AAA);
    background-image: -ms-linear-gradient(#DDD, #AAA);
    background-image: -o-linear-gradient(#DDD, #AAA);
}

.g5meter > span {
    display: block;
    padding: 0;
    height: 100%;
    background-image: -webkit-linear-gradient(#BBB, #888);
    background-image: -moz-linear-gradient(#BBB, #888);
    background-image: -ms-linear-gradient(#BBB, #888);
    background-image: -o-linear-gradient(#BBB, #888);
}

input[type='range'].transportbar::-webkit-slider-thumb {
    height:8px;
    width:4px;
    background-image: -webkit-linear-gradient(#AAA, #666);
}

input[type='range'].transportbar::-moz-range-thumb {
    -moz-appearance: none !important;
    height:8px;
    width:4px;
    background-image: -moz-linear-gradient(#AAA, #666);
    border:0px;
  }

.g5transport-1pxup::-webkit-slider-thumb {
    margin-top: -3px !important;
}

.g5meter-1pxup::-webkit-slider-thumb {
    margin-top: -2px !important;
}

input[type='range'].volume {
    width: 35px;
    height: 15px;
    margin: 2px;
    padding: 0;
    background-repeat: no-repeat;
    background-image: url("data:image/gif;base64,R0lGODlhIwAPAMQAAAAAAP///8DAwLCwsK6urqampp2dnZWVlYyMjICAgH9/f319fXp6end3d3Z2dnV1dXR0dHNzc3JycnFxcXBwcP///wAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAACH5BAEAABUALAAAAAAjAA8AAAVWoCCOZGmeaKqubOu+sKPALaFQ1DLRacFQk4QwEeGVCrfIcFk0+ijKpbT5MkQoEqlWSF0dJtitmLhCQB/jdJf0gzTS8MSONEg6HIy8fs/vMyYHRoKDLCEAOw==");
}

input[type='range'].volume::-webkit-slider-thumb {
    background:#BBB;
    height:15px;
    width:4px;
}

input[type='range'].transportbar::-moz-range-track, input[type='range'].volume::-moz-range-track {
    background: none;
    border: 0;
  }

input[type='range'].volume::-moz-range-thumb {
    vertical-align:middle;
    -moz-appearance: none !important;
    background:#BBB;
    height:13px;
    width:4px;
    border: 0;
  }

@-moz-document url-prefix() {
    input[type='range'].transportbar {
        margin-top: -20px;
    }

    .g5meter-1pxup {
         margin-top: -22px !important;
    }
}

.g5buttons {
    height: 30px;
}

.g5buttons-1pxup {
    height: 14px !important;
}

.g5button {
    outline: none;
    float: left;
    border: 0px;
    width: 40px;
    height: 40px;
    background-repeat: no-repeat;
    margin: 2px;
    padding: 0;
    color: #333;
    font-size: 13px;
    text-align center;
    background: transparent;
}

.volumedisabled {
    width: 35px;
    height: 15px;
    background-image: url("data:image/gif;base64,");
}

.g5prev.enabled:before {
    content: "Prev"
}

.g5prev.disabled {
}

.g5play.enabled:before {
    content: "Play"
}

.g5play.disabled:before {
    content: "Pause"
}

.g5stop.enabled:before {
    content: "Stop"
}

.g5next.enabled:before {
    content: "Next"
}

.g5next.disabled:before {
    content: ""
}