<h3>{{playlist.name}}</h3> {{#if_eq userId compare=playlist._user}}<a href=/playlist/{{playlist._id}}/edit>Edit playlist</a>{{/if_eq}}

<table>
  {{#each playlist._songs}}
    <tr>
      <td><p>{{#blurb ../playlist._blurbs _id}}{{/blurb}}</p></td>
      <td class=second><a data-id="{{_id}}" href="/playlist/{{../playlist._id}}/{{year}}/{{month}}/{{longDay}}/{{longSlug}}">{{title}}</a> - {{album}}</td>
    </tr>
  {{/each}}
</table>
